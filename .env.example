# NovaBot Environment Configuration
# Copy this file to .env and configure as needed

# Application Settings
NODE_ENV=development
BOT_NAME=NovaBot
BOT_VERSION=1.0.0

# WhatsApp Bot Settings
# No additional configuration required for whatsapp-web.js
# Session data will be stored in ./wwebjs_auth/ directory

# Logging Settings
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIRECTORY=./logs

# Optional: Custom Settings (for future features)
# MAX_MESSAGE_LENGTH=4000
# RESPONSE_DELAY_MS=1000
# ENABLE_ANALYTICS=false